<?xml version='1.0' encoding='utf-8'?>
<widget id="org.montrealcitymission.kindnessapp" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Kindness App</name>
    <description>
        MCM Kindness App helps you practice compassion by creating a few minutes of timed, silent meditation on compassion in your life.
    </description>
    <author email="info@montrealcitymission.org" href="http://http://www.montrealcitymission.org/en/">
        Mnotreal City Mission
    </author>
    <content src="index.html" />
    <access origin="*" />
    <preference name="Orientation" value="portrait" />
